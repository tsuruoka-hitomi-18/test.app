<%= form_with(model: @blog, local: true) do |form| %>
    # <% if @blog.errors.any? %>
      <div id="error_explanation">
        <h2>ブログを作成する</h2>
        <%= render 'form' %>
        <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="blog_title">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="blog_content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <%= form.submit %>
  <% end %>
  